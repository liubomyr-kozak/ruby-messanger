<form action="/<%= @getid.id %>" method="post">

<!-- This is a js hack to put, since we cannot directly put a http request. Instead we use it as below -->
<input type="hidden" name="_method" value="put">
  <textarea name="item" value = "<%= @getid.id %>" ><%= @getid.content %></textarea>


  <br>

  <label for="deleteInHour">
    <input id="deleteInHour"
           name="whenDelete"
           type="radio"
           value="deleteInHour"
           <%= @getid.whenDelete == 'deleteInHour' ? 'checked' : '' %>>
    delete in hour
  </label>
  <br>
  <label for="deleteAfterFirstVisited">
    <input id="deleteAfterFirstVisited"
           name="whenDelete"
           type="radio"
           value="deleteAfterFirstVisited"
           <%= @getid.whenDelete == 'deleteAfterFirstVisited' ? 'checked' : '' %>>
    delete after first visited
  </label>
  <br>

<input type="submit" value="Edit Item">
	
</form>